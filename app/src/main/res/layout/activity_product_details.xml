<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_above="@id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_above="@id/bottomlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/productImg"
        android:scaleType="fitCenter"
        android:src="@drawable/home_looper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="17sp"
            android:textColor="@color/moneyRed"
            android:id="@+id/productPrice"
            android:maxLines="1"
            android:text="￥12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/productPrice"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:id="@+id/productNum"
            android:maxLines="1"
            android:text="剩余数量:10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/productPrice"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:id="@+id/productUserName"
            android:maxLines="1"
            android:text="捐赠者:刘**"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:gravity="center"
        android:background="#B4AFAF"
        android:text="评论"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/listview"
            android:divider="#00000000"
            android:fastScrollEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
        </LinearLayout>


    </ScrollView>
        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/product_details_bottom"/>
        </LinearLayout>
    </RelativeLayout>
