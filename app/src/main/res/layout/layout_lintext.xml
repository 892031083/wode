<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/background_lintext"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/mobileText_registered"
            android:id="@+id/linTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_toLeftOf="@id/linTextbtn"
            android:layout_toRightOf="@id/linTextTitle"
            android:paddingLeft="10dp"
            android:id="@+id/linTextEdit"
            android:background="@drawable/nolineedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/linTextbtn"
            android:text="发送验证码"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@color/loginbtnred"
            android:layout_width="80dp"
            android:layout_height="30dp"/>
</RelativeLayout>