<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/titleProductNum"
        android:paddingTop="40dp"
        android:paddingLeft="15dp"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:text="共0件商品"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_cart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/z"
        android:layout_marginTop="110dp"
        android:layout_width="1dp"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_below="@+id/z"
        android:layout_above="@id/wei"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:scrollbars="none"
            android:divider="#00000000"
            android:listSelector="#00000000"
            android:id="@+id/listview"
            android:background="@drawable/background_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/wei"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="合计:"
            android:layout_toLeftOf="@id/sum"
            android:layout_centerVertical="true"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#ef280e"
            android:layout_marginRight="20dp"
            android:id="@+id/sum"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/order"
            android:text="￥100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/order"
            android:textColor="@android:color/white"
            android:text="结算"
            android:backgroundTint="#ef280e"
            android:background="@drawable/background_buttom"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="35dp"/>
    </RelativeLayout>

</RelativeLayout>